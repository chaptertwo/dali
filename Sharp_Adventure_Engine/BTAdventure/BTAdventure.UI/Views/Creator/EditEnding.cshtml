@model  List<BTAdventure.Models.Ending>
@{
    ViewBag.Title = "Edit an Ending";
}

<h2>Edit an Ending</h2>
<div class="container-fluid wireframe">

    @using (Html.BeginForm("EditEnding", "Creator", FormMethod.Post))
    {

        for (int i = 0; i < Model.Count(); i++)
        {

            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(a => a[i].EndingName, new { @class = "form-control col" })
                    @Html.HiddenFor(a => a[i].EndingId)
                    @Html.HiddenFor(a => a[i].GameId)
                    @Html.TextBoxFor(a => a[i].EndingName, new { @class = "form-control col", required = "required" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6" style="padding-top:30px;">
                    @Html.LabelFor(a => a[i].EndingText, new { @class = "form-control col" })
                    @Html.TextAreaFor(a => a[i].EndingText, new { @class = "form-control col", required = "required"  })
                </div>
            </div>
            <div class="col-md-12">
                @Html.ActionLink("Delete", "DeleteEnding", "Creator", new { id = Model[i].EndingId }, new { @class = "btn btn-danger", @style = "margin-top:20px;", @onclick = "return confirm('Are you sure you wish to delete this ending?');" })
            </div>
            <br />
            <hr />
        }
        <div class="form-row">
            <a class="btn btn-danger btnForm" href="/Creator/SceneMain/@ViewBag.GameId">Back</a>
            <button type="submit" class="btn btn-primary btnForm">Save</button>
        </div>


    }
</div>

